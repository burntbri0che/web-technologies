<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Notes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/custom.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">NoteIT</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">My Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact-form">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ajax">CRUD Operations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Sign Up</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <div class="template-header">
            <h1>Create a New Note</h1>
            <p>Use the form below to add new notes to your personal collection.</p>
        </div>
        <form id="noteForm" action="/notes/add" method="POST">
            <div class="mb-3">
                <label for="noteInput" class="form-label">Your Note</label>
                <textarea class="form-control" id="noteInput" name="note" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-template">Save Note</button>
        </form>
    </div>

    <div class="container mt-5">
        <h2 class="template-header">Your Notes</h2>
        <div id="notesDisplay" class="notes-container">
            <!-- notes made here pleek -->
        </div>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function() {
            function fetchNotes() {
                $.ajax({
                    url: "/notes/all",
                    method: "GET",
                    success: function(notes) {
                        $('#notesDisplay').empty();
                        notes.forEach(function(note) {
                            $('#notesDisplay').append('<div class="note-item mb-3"><p>' + note + '</p></div>');
                        });
                    },
                    error: function() {
                        console.error("Error loading notes");
                    }
                });
            }

            $('#noteForm').submit(function(event) {
                event.preventDefault();
                $.ajax({
                    url: "/notes/add",
                    method: "POST",
                    data: $(this).serialize(),
                    success: function() {
                        fetchNotes();
                        $('#noteInput').val(''); 
                    },
                    error: function() {
                        console.error("Error saving note");
                    }
                });
            });

            fetchNotes(); 
        });
    </script>



</body>
</html>
